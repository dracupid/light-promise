{
  "name": "light-promise",
  "version": "0.0.4",
  "description": "A Super Lightweight promise/A+ implementation",
  "main": "dist/light-promise.js",
  "scripts": {
    "test": "mocha test/basic.js && node test/promiseAPlus.js && promises-es6-tests test/promiseAPlus.js",
    "prepublish": "npm run build",
    "lint": "standard light-promise.es6 | snazzy",
    "build": "npm run lint && babel light-promise.es6 > dist/light-promise.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dracupid/light-promise.git"
  },
  "keywords": [
    "promise",
    "promise/A+"
  ],
  "files": [
    "dist"
  ],
  "author": "Dracupid",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dracupid/light-promise/issues"
  },
  "homepage": "https://github.com/dracupid/light-promise",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.6.0",
    "mocha": "^2.4.5",
    "promises-aplus-tests": "^2.1.1",
    "promises-es6-tests": "^0.5.0",
    "snazzy": "^4.0.0",
    "standard": "^7.0.0"
  },
  "babel": {
    "plugins": [
      "transform-es2015-template-literals",
      "transform-es2015-literals",
      "transform-es2015-function-name",
      "transform-es2015-arrow-functions",
      "transform-es2015-block-scoped-functions",
      "transform-es2015-classes",
      "transform-es2015-shorthand-properties",
      "transform-es2015-duplicate-keys",
      "transform-es2015-computed-properties",
      "transform-es2015-for-of",
      "transform-es2015-sticky-regex",
      "check-es2015-constants",
      "transform-es2015-spread",
      "transform-es2015-parameters",
      "transform-es2015-destructuring",
      "transform-es2015-block-scoping"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "define"
    ]
  },
  "dependencies": {}
}
